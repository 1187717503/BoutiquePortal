            <constructor-arg name="secretKey" value="KtrOrRvgxeOy34jPCphpMzkgsxfv7n"></constructor-arg>
            <constructor-arg name="topic" value="nugnes_product_delta_test"></constructor-arg>
            <constructor-arg name="ONSAddr" value="http://onsaddr-internet.aliyun.com/rocketmq/nsaddr4client-internet"></constructor-arg>
            <constructor-arg name="mqNames" ref=""></constructor-arg>-->
            <property name="accessKey" value="LTAIaFAG0DNogI0N"></property>
            <property name="secretKey" value="KtrOrRvgxeOy34jPCphpMzkgsxfv7n"></property>
            <property name="topic" value="nugnes_product_delta_test"></property>
            <property name="ONSAddr" value="http://onsaddr-internet.aliyun.com/rocketmq/nsaddr4client-internet"></property>
            <property name="mqNames">
