<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.intramirror.order.core.mapper.OrderCommentsMapper">
    <resultMap id="BaseResultMap" type="com.intramirror.order.api.model.OrderComments">
        <id column="order_comments_id" property="order_comments_id" jdbcType="BIGINT"/>
        <result column="logistics_product_id" property="logistics_product_id" jdbcType="BIGINT"/>
        <result column="comments" property="comments" jdbcType="VARCHAR"/>
        <result column="reason" property="reason" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="BIGINT"/>
        <result column="created_at" property="created_at" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updated_at" jdbcType="TIMESTAMP"/>
    </resultMap>
   
   <insert id="saveOrderComments" parameterType="java.util.Map">
   INSERT INTO order_comments(logistics_product_id,comments,reason,`status`,created_at,updated_at)
	VALUE(#{logistics_product_id,jdbcType=BIGINT},#{comments,jdbcType=VARCHAR},#{reason,jdbcType=VARCHAR},#{status,jdbcType=BIGINT},#{created_at,jdbcType=TIMESTAMP},#{updated_at,jdbcType=TIMESTAMP})
   </insert>
</mapper>