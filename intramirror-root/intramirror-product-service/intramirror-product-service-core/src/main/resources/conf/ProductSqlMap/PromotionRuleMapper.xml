    <resultMap id="BaseResultMap" type="com.intramirror.product.api.model.PromotionIncludeRule">
        <id column="promotion_include_rule_id" jdbcType="BIGINT" property="promotionIncludeRuleId"/>
        <result column="promotion_id" jdbcType="BIGINT" property="promotionId"/>
