    <select id="listActivePromotion" resultType="java.util.Map">
        SELECT * FROM t_promotion WHERE enabled=TRUE
    </select>


    <select id="listExcludeRulePromotion" parameterType="String" resultType="java.util.Map">
        SELECT tpir.`promotion_exclude_rule_id`,
          tpir.`promotion_id` ,tpir.`vendor_id`,
          CASE tpir.`vendor_id` WHEN -1 THEN 'ALL Boutiques' ELSE v.`vendor_name` END AS vendor_name,
          tpir.`season_code`,
          tpir.`brands`,
          tpir.`categorys`
        FROM `t_promotion_exclude_rule` tpir
        LEFT JOIN `vendor` v ON (v.`vendor_id` = tpir.`vendor_id` AND v.`enabled` = 1)
        WHERE tpir.`promotion_id` = #{promotionId}
    </select>

    <select id="listIncluedRulePromotion" parameterType="String" resultType="java.util.Map">
        SELECT tpir.`promotion_include_rule_id`,
