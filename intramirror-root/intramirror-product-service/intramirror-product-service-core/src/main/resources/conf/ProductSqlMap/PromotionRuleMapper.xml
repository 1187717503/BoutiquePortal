                `seq_type` = #{seqType, jdbcType=TINYINT},
            </if>
            <if test="sort != null">
                `sort` = #{sort, jdbcType=INTEGER},
            </if>
            <if test="enabled != null">
                `enabled` = #{enabled, jdbcType=BIT},
            </if>
        </trim>
        WHERE promotion_seq_id = #{promotionSeqId, jdbcType=BIGINT}
    </update>

