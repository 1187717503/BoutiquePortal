                `vendor_id`,
            </if>
            <if test="categorys != null">
                `categorys`,
            </if>
            <if test="brands != null">
                `brands`,
            </if>
            `created_at`
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{promotionId, jdbcType=BIGINT},
